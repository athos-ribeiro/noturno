{
  "manifest_version": 2,
  "name": "noturno",
  "version": "2.0.1~dev",
  "description": "Easily switch between proxy configurations",
  "permissions": [
    "proxy",
    "storage",
    "menus",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "data/off_16.png",
      "32": "data/off_32.png",
      "64": "data/off_64.png"
    },
    "default_title": "Proxy is Off - press Alt+Shift+X to turn on",
    "default_popup": "menu/menu.html"
  },
  "commands": {
    "toggle-status": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "linux": "Alt+Shift+X"
      },
    "description": "Toggles proxy status - On/Off"
    }
  },
  "applications": {
    "gecko": {
      "strict_min_version": "60.0"
    }
  }
}
